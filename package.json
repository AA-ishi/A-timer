{
  "name": "cute-timer",
  "version": "1.0.0",
  "main": "main.js",
  "build": {
    "appId": "com.asako.cutetimer",
    "productName": "Cute Timer",
    "win": {
      "target": ["nsis", "portable"],
      "icon": "icon.ico"
